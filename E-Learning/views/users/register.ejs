<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>
<body>

    <%- include ('../layout') %>


    <div class="container">
        <h2 align="center">ลงทะเบียน</h2>
        
        <!-- แสดงผล Error -->
        <% if(locals.errorkab){%>
            <ul class="alert alert-danger">
                <% Object.values(errorkab).forEach(function(error){%>
                        <li><%= error.msg %></li>
                <%})%>
            </ul>
        <%}%>


        <form class="form-group" action="/users/register" method="post">
            <div class="form-group">
                <label>ผู้เรียน/ผู้สอน</label>
                <select class="form-control" name="type">
                    <option value="student">Student</option>
                    <option value="instructor">Instructor</option>

                </select>
            </div>

            <div class="form-group">
                <label for="">UserName:</label>
                <input type="text" name="username" value="" class="form-control">
            </div>

            <div class="form-group">
                <label for="">Password:</label>
                <input type="password" name="password" value="" class="form-control">
            </div>

            <div class="form-group">
                <label for="">Email:</label>
                <input type="email" name="email" value="" class="form-control">
            </div>

            <div class="form-group">
                <label for="">First Name:</label>
                <input type="text" name="fname" value="" class="form-control">
            </div>

            <div class="form-group">
                <label for="">Last Name:</label>
                <input type="text" name="lname" value="" class="form-control">
            </div>

            <input type="submit" name="" value="ลงทะเบียน" class="btn btn-primary">

        </form>
    </div>
</body>
</html>