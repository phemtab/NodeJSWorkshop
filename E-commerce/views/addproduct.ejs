<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  
</head>
<body>
  <%- include ('layout') %>
  <!-- Page Content -->
  <div class="container">
    <div class="row my-4">

      <!-- /.col-lg-3 -->
      <div class="col-lg-12">
        <div>
        <h2 align="center">แบบฟอร์มบันทึกสินค้า</h2>
         <!-- แสดงผล Error -->
            <% if(locals.errors){%>
            <ul class="alert alert-danger">
                <% Object.values(errors).forEach(function(error){%>
                        <li><%= error.msg %></li>
                <%})%>
            </ul>
            <%}%>

            <form class="" action="/products/add" method="post">
                <div class="form-group">
                    <label>ชื่อสินค้า</label>
                    <input type="text" name="name" value="" class="form-control">
                </div>

                <div class="form-group">
                    <label>รายละเอียด</label>
                    <textarea name="description" rows="8" cols="80" value="" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label>ราคา</label>
                    <input name="price" type="number" value="" min="1" class="form-control"></input>
                </div>

                <div class="form-group">
                    <label>หมวดหมู่</label>
                    <select class="form-control" name="category">
                        <% categories.forEach(function(category){ %>
                            <option value="<%= category.name %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label>ภาพสินค้า</label>
                    <input name="img" type="text" value="" class="form-control"></input>
                </div>


                <input type="submit" name="" value="ลงทะเบียน" class="btn btn-primary">
            </form>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
</body>
</html>