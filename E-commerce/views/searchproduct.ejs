<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  
</head>
<body>
  <%- include ('layout') %>
  <!-- Page Content -->
  <div class="container">

    <div class="row my-4">

      <%- include('sidebar') %>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div class="row">
          <% products.forEach(function(product){%>

          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="/products/show/<%= product._id %>"><img class="card-img-top" src="<%= product.img %>" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/products/show/<%= product._id %>"><%= product.name %></a>
                </h4>
                <h5><%= formatMoney(product.price) %></h5>
                <p class="card-text"><%= descriptionText(product.description,200) %></p>
              </div>
              <div class="card-footer">
                <a href="#" class="btn btn-success">เพิ่มลงตะกร้า</a>
              </div>
            </div>
          </div>
          <%})%>
        </div>
        <!-- /.row -->
        <% if(products.length==0) { %>
            <div class="alert alert-danger">
                ไม่พบสินค้าในหมวดหมู่นี้
            </div>

        <% } %>

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
  <% if(products.length==0) { %>
        <div class="my-5"></div>

<% } %>
  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-1 text-center text-white">Copyright &copy; Your Website 2019</p>
    </div>
    <!-- /.container -->
  </footer>
</body>
</html>