<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%-include ('layout') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h3 class="my-4" align="center">Dashboard</h3>
                <div class="list-group">
                    <a href="/admin/projects/add" class="btn btn-primary">เพิ่มโปรเจค</a>
                </div>
            </div>

            <div class="col-lg-9">
                <h3 align="center" class="my-4">แบบฟอร์มแก้ไขข้อมูล</h3>
                <% projects.forEach(function(project){ %>
                <form class="" action="/admin/projects/edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%=project._id%>">
                    <div class="form-group">
                        <label>ชื่อโปรเจค</label>
                        <input type="text" name="name" value="<%=project.name%>" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>รายละเอียด</label>
                        <textarea name="description" rows="4" cols="80" class="form-control"><%=project.description%></textarea>
                    </div>

                    <div class="form-group">
                        <label>วันสร้างโปรเจค</label>
                        <input type="date" name="date" value="<%=project.date%>" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Upload ไฟล์</label>
                        <input type="file" name="image" value="" class="form-control">
                    </div>

                    <input type="submit" value="อัพเดทโปรเจค" class="btn btn-success">

                </form>
                <% }) %>

            </div>
        </div>
    </div>
</body>
</html>